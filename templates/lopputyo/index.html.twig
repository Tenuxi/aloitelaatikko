{% extends 'base.html.twig' %}
{% block title %}Aloitelista{% endblock %}
{% block body %}
   <h1>Aloitelista</h1>
   <div id="divi">
   <table class="table table-hover">
   <thead class="thead-dark">
       <tr>
       <th>ID</th>
       <th>Aihe</th>
       <th>Kuvaus</th>
       <th>Kirjauspäivä</th>
       <th>Etunimi</th>
       <th>Sukunimi</th>
       <th>Sähköposti</th>
       <th>Napit</th>
       </tr>
   </thead>
   <tbody>
   {% for aloite in aloitteet %}
       <tr>
       <th>{{ aloite.id }}</th>
       <td>{{ aloite.aihe }}</td>
       <td>{{ aloite.kuvaus }}</td>
       <td>{{ aloite.kirjauspvm }}</td>
       <td>{{ aloite.etunimi }}</td>
       <td>{{ aloite.sukunimi }}</td>
       <td>{{ aloite.email }}</td>
       <td>
           <a href="{{ path('aloite_nayta', {id: aloite.id}) }}" class="btn btn-dark">Naytä</a>
           <a href="{{ path('aloite_muokkaa', {id: aloite.id}) }}" class="btn btn-success">Muokkaa</a>
           <button poista-aloite="{{ aloite.id }}" class="btn btn-danger poista-aloite">Poista</button>
       </td>
       </tr>
   {%  endfor %}
   </tbody>
</table>
</div>
{% endblock %}
{% block javascripts %}
   {{ parent() }}
   <script src="js/main.js"></script>
{% endblock %}